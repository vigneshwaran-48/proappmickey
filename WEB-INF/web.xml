<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

    <web-app>
        <welcome-file-list>
            <welcome-file>html/main.html</welcome-file>
        </welcome-file-list>

        <servlet>
            <servlet-name>RetrieveData</servlet-name>
            <servlet-class>com.servlets.RetrieveUserData</servlet-class>
        </servlet>

        <servlet-mapping>
            <servlet-name>RetrieveData</servlet-name>
            <url-pattern>/users/getall</url-pattern>
        </servlet-mapping>

        <servlet>
            <servlet-name>RetrieveProjects</servlet-name>
            <servlet-class>com.servlets.RetrieveProjects</servlet-class>
        </servlet>

        <servlet-mapping>
            <servlet-name>RetrieveProjects</servlet-name>
            <url-pattern>/project/getall</url-pattern>
        </servlet-mapping>

        <servlet>
            <servlet-name>AddProject</servlet-name>
            <servlet-class>com.servlets.AddProject</servlet-class>
        </servlet>

        <servlet-mapping>
            <servlet-name>AddProject</servlet-name>
            <url-pattern>/project/add</url-pattern>
        </servlet-mapping>

        <servlet>
            <servlet-name>DeleteProject</servlet-name>
            <servlet-class>com.servlets.DeleteProject</servlet-class>
        </servlet>

        <servlet-mapping>
            <servlet-name>DeleteProject</servlet-name>
            <url-pattern>/project/delete</url-pattern>
        </servlet-mapping>

        <servlet>
            <servlet-name>AddTask</servlet-name>
            <servlet-class>com.servlets.AddTask</servlet-class>
        </servlet>

        <servlet-mapping>
            <servlet-name>AddTask</servlet-name>
            <url-pattern>/task/add</url-pattern>
        </servlet-mapping>

        <servlet>
            <servlet-name>DeleteTask</servlet-name>
            <servlet-class>com.servlets.DeleteTask</servlet-class>
        </servlet>

        <servlet-mapping>
            <servlet-name>DeleteTask</servlet-name>
            <url-pattern>/task/delete</url-pattern>
        </servlet-mapping>

        <servlet>
            <servlet-name>RetrieveTasks</servlet-name>
            <servlet-class>com.servlets.RetrieveTasks</servlet-class>
        </servlet>

        <servlet-mapping>
            <servlet-name>RetrieveTasks</servlet-name>
            <url-pattern>/task/getall</url-pattern>
        </servlet-mapping>
    </web-app>